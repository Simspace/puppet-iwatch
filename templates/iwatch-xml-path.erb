<%-
line = '    <path'
if @recurse == 'enabled'
  line << ' type="recursive"'
else
  line << ' type="single"'
end
if @syslog == 'enabled'
  line << ' syslog="on"'
else
  line << ' syslog="off"'
end
if @exec != 'disabled'
  line << ' exec="' + @exec + '"'
end
if @events != 'default'
  line << ' events="' + @events + '"'
end
if @alert == 'enabled'
  line << ' alert="on"'
else
  line << ' alert="off"'
end
line << '>' + @path + '</path>'
-%>
<%= line %>
